/* Styles for the Home React component */
.center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.home__bg-image {
  background-size: cover;
  width: 100%;
  height: 100%;
  /*background-image: url("./static/home-books.jpg");*/
}

.home__button-link {
  text-decoration: none;
}

.home__button {
  width: 300px;
  height: 80px;
}

.container {
  height: 100%;
}

/* Increase specificity to override component styles */
.MuiButton-root.home__button:hover {
  background-color: transparent;
  border: 4px darkslategrey solid;
  border-radius: 0;
}

.home__button .MuiButton-label {
  font-size: 1.5em;
  color: darkslategrey;
}

/* Above are all from example */

.home__learn-more{
  float: right;
  margin: 0.2rem 0.2rem 0.2rem 0.2rem;
  padding: 0rem 0rem 0rem 0rem;
}

h4 {
  margin: inherit;
}

.home__profile-image {
  width: 15vw;
  float: left;
  padding-right: 1rem;
  padding-bottom: 1rem;
}

.home__content-image {
  width: 13vw;
  float: left;
  padding-right: 1rem;
  padding-bottom: 1rem;
}